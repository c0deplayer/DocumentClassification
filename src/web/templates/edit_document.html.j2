{% extends "base.html.j2" %}

{% block title %}Edit Document{% endblock %}

{% block content %}
<div class="card">
    <div class="card-body">
        <h1 class="card-title">Edit Document</h1>
        <form method="POST">
            {{ form.csrf_token }}

            <div class="mb-3">
                {{ form.file_name.label(class="form-label") }}
                {{ form.file_name(class="form-control") }}
            </div>

            <div class="mb-3">
                {{ form.classification.label(class="form-label") }}
                {{ form.classification(class="form-control") }}
            </div>

            <div class="mb-3">
                {{ form.summary.label(class="form-label") }}
                {{ form.summary(class="form-control", rows=5) }}
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="{{ url_for('index') }}" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
{% endblock %}
